<Application
    x:Class="AcFun.UWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AcFun.UWP"
    xmlns:module="using:AcFun.UWP.Module"
    RequestedTheme="Light">

    <!--应用程序资源-->
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/ControlStyle.xaml"/>
                <ResourceDictionary Source="/Resources/ItemTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <module:User xmlns:local="clr-namespace:AcFun.UWP.Module" x:Key="UserData"/>
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
