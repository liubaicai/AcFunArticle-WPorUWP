<UserControl x:Class="ACFUN.Controls.SortBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    Height="800" Width="480" VerticalAlignment="Center">

    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneChromeBrush}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <RadioButton Click="rb1_Click" x:Name="rb1" Content="文章·综合" HorizontalAlignment="Center" />
            <RadioButton Click="rb2_Click" x:Name="rb2" Content="工作·情感" HorizontalAlignment="Center" />
            <RadioButton Click="rb3_Click" x:Name="rb3" Content="动漫·文化" HorizontalAlignment="Center" />
            <RadioButton Click="rb4_Click" x:Name="rb4" Content="漫画·小说" HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</UserControl>